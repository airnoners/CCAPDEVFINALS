<section class="profile-section">
    <h1>My Profile</h1>
    <div class="profile-info">
        <div class="profile-picture-section">
            <div class="profile-picture">
                <img src="images/default.png" alt="Profile Picture" id="profileImage">
            </div>
        </div>
        
        <div class="profile-header">
            <h2 id="profileName">Loading...</h2>
            <p>ID: <span id="profileId">Loading...</span></p>
            <p>Email: <span id="profileEmail">Loading...</span></p>
            <p>Contact: <span id="profileContact">Loading...</span></p>
            <p>Facebook: <a href="#" id="profileFacebook">Loading...</a></p>
        </div>

        <div class="profile-actions">
            <button class="btn-primary" id="editProfileBtn">Edit Profile</button>
        </div>

        <div class="profile-listings">
            <h3>My Listings</h3>
            <ul id="profileListings">
                <li>Loading...</li>
            </ul>
        </div>
    </div>
</section>

